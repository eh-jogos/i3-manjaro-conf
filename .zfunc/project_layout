function project_layout(){
	# echo $1
	# echo "${@:2}"
	case $1 in
		"gamejolt_api" | "gjapi")
			/mnt/24847D5F847D3500/Backups/i3-manjaro-conf/window_layouts_by_project/GamejoltApiWindowSetup.sh
			;;
		"cpp")
			/mnt/24847D5F847D3500/Backups/i3-manjaro-conf/window_layouts_by_project/CppCourseWindowSetup.sh
			;;
		"dcors")
			/mnt/24847D5F847D3500/Backups/i3-manjaro-conf/window_layouts_by_project/DCORSWindowSetup.sh
			;;
		"cosmic_abyss" | "escape_abyss" | "cosmic" | "abyss" )
			/mnt/24847D5F847D3500/Backups/i3-manjaro-conf/window_layouts_by_project/CosmicAbyssWindowSetup.sh
			;;
		"mathy")
			/mnt/24847D5F847D3500/Backups/i3-manjaro-conf/window_layouts_by_project/JavaryMathySetup.sh
			;;
		*)
			echo "project_layout needs to receive one argument that is the project name or alias"
			echo "\nCurrent aliases are:"
			echo " - Gamejolt API --------------------------------- gamejolt_api | gjapi"
			echo " - C++ Udemy Course ----------------------------- cpp"
			echo " - Dungeon Crawler On Rails Shooter ------------- dcors"
			echo " - Escape From the Cosmic Abyss ----------------- cosmic_abyss | escape_abyss | cosmic | abyss"
			echo " - Javary: Mathy -------------------------------- mathy"
			;;
	esac
}